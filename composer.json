{
    "name": "baldwin/magento2-module-less-js-compiler",
    "description": "Allows Magento 2 to compile less files using the less nodejs compiler",
    "license": "MIT",
    "type": "magento2-module",
    "keywords": [
        "magento",
        "magento2",
        "less",
        "compiler"
    ],
    "authors": [
        {
            "name": "Pieter Hoste",
            "email": "pieter@baldwin.be",
            "role": "Problem Solver"
        }
    ],
    "require": {
        "php": "~5.5.0 || ~5.6.0 || ~7.0.0 || ~7.1.0 || ~7.2.0 || ~7.3.0 || ~7.4.0 || ~8.1.0",
        "magento/framework": "^100.0.9 || ^101.0.0 || ^102.0.0 || ^103.0.0",
        "magento/module-developer": "^100.0.5"
    },
    "require-dev": {
        "bitexpert/phpstan-magento": "^0.17.0",
        "ergebnis/composer-normalize": "^2.20",
        "friendsofphp/php-cs-fixer": "^3.4",
        "magento/magento-coding-standard": "^6.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^1.0"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],
    "autoload": {
        "psr-4": {
            "Baldwin\\LessJsCompiler\\": ""
        },
        "files": [
            "registration.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "([ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths vendor/magento/magento-coding-standard,vendor/phpcompatibility/php-compatibility)"
        ],
        "post-update-cmd": [
            "([ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths vendor/magento/magento-coding-standard,vendor/phpcompatibility/php-compatibility)"
        ]
    }
}
